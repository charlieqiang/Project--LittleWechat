/**index.wxss**/
.page {
  padding: 20rpx;
  padding-top: 0rpx;
  color: rgb(92, 92, 92);
  font-weight: 500;
}

.welcomeSwiper {
  margin: 0;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 300rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  position: relative;
}

image.active {
  transform: none;
  transition: all 1s ease-in 0s;
}

image.quiet {
  transform: scale(0.9);
  transition: all 1s ease-in 0s;
}

.page-title {
  margin-top: 20rpx;
}

.courselist {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #efefef;
  padding: 20rpx 30rpx;
  /* background: #fff; */
}

.info {
  height: 150rpx;
  flex: 1;
  padding: 8rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.poster {
  width: 200rpx;
  height: 140rpx;
  border-radius: 10rpx;
  box-shadow: 3px 4px 12px 0 rgba(0, 0, 0, 0.2);
}

.title {
  font-size: 30rpx;
  font-weight: 700;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.dscrb {
  font-size: 24rpx;
}

.others {
  font-size: 22rpx;
  color: #9999;
}
