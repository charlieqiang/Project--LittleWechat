<!--index.wxml-->
<view class="page">
  <swiper class='welcomeSwiper' autoplay indicator-dots interval="3000" duration="2000" previous-margin="60rpx" next-margin="60rpx" circular bindchange="bindchange">
    <block wx:for="{{welImgUrl}}" wx:key="index">
      <swiper-item id="{{index}}">
        <image class="slide-image {{swiperIndex == index ? 'active' : 'quiet'}}" mode='aspectFill' src="{{item}}">
        </image>
      </swiper-item>
    </block>
  </swiper>
  <view class="page-title">视频库</view>
  <block wx:for="{{courseMsgUrl}}" wx:key="index">
    <view bindtap="tapItem" class='courselist'  data-para="{{item}}">
      <image class='poster' src='{{item.url}}'></image>
      <view class='info'>
        <view class='title'>
          {{item.name}}
        </view>
        <view class='dscrb'>
          {{item.vright}}
        </view>
        <view class='others'>
          <text>{{item.watchVolume}}人已观看 · {{item.date}}</text>
        </view>
      </view>
    </view>
  </block>
</view>