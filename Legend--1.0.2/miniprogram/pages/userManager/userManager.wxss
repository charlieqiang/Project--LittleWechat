/* pages/userManager/userManager.wxss */
@import "../../common/common.wxss";
image {
  width: 70rpx;
  height: 70rpx;
}

.userinfo {
  width: 750rpx;
  height: 250rpx;
  /* background: orange; */
  color: #999;
  display: flex;
  flex-direction: column;
  background: pink;
  /* align-items: center; *//* margin-bottom: 100rpx; */
}

.userinfo-avatar {
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin: 20rpx;
  margin-left: 50rpx;  
  border-radius: 50%;
  border: 1rpx solid #fff;
  background-size: cover;
  background-color: white;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  background: rgb(0, 255, 170);
}

.userinfo-nickName {

  text-align: center;
  width: 160rpx;
  height: 50rpx;
  /* background: orange; */
}


.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.tdnum {
    width:40%;
    justify-content: center;
    text-align: center;
}
.td {
    width:60%;
    justify-content: center;
    text-align: left;
}

.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.thnum {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
.th {
  width: 60%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
