/**user.wxss**/

image {
  width: 160rpx;
  height: 160rpx;
}

.userinfo {
  position: relative;
  width: 750rpx;
  height: 400rpx;
  /* background: orange; */
  color: #999;
  display: flex;
  flex-direction: column;
  /* align-items: center; *//* margin-bottom: 100rpx; */
}

.userinfo-avatar {
  align-self: center;
  overflow: hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
  background-size: cover;
  background-color: white;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo-nickName {
  align-self: center;
  /* background: pink; */
}

.userinfo-loginbtn {
  /* background: pink; */
  /* position: absolute; */
  margin-top: 20rpx;
  padding-left: 32rpx;
  /* align-content: center; */
}

.button-hover {
  background: none;
}

.userinfo-loginbtnView {
  /* align-self: center; */
  color: rgb(100, 100, 100);
  background-color: #ebebeb;
  height: 37rpx;
  width: 80rpx;
  padding: 5rpx 10rpx;
  font-size: 12px;
  border-radius: 2px;
  box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.2);

}

.userItem {
  position: relative;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.weui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.weui-flex_item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.renewBtn{
  float: right;
}

.beginPlaceholder {
  margin-top: 18rpx;
  margin-bottom: 3rpx;
  padding: 8rpx 40rpx;
  text-align: left;
  font-size: 14px;
  background-color: #fff;
  height: 2.3em;
  width: 600rpx;
  line-height: 2.3em;
  color: rgb(134, 133, 133);
}

.endPlaceholder {
  margin-top: 3rpx;
  margin-bottom: 18rpx;
  padding: 8rpx 40rpx;
  text-align: left;
  font-size: 14px;
  background-color: #fff;
  height: 2.3em;
  width: 600rpx;
  line-height: 2.3em;
  color: rgb(134, 133, 133);
}

.version {
  margin-top: 50rpx;
  color: rgb(100, 100, 100);
  font-size: 12px;
}
