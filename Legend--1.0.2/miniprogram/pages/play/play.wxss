.video {
  background: pink;
  display: flex;
  justify-content: center;
  align-items: center;
}

.myVideo {
  width: 750rpx;
  height: 500rpx;
}

.videoContent {
  padding: 10rpx;
  /* background: pink; */
}

.videoRight {
  float: left;
  color: white;
  padding-left: 16rpx;
  padding-right: 16rpx;
  padding-top: 7rpx;
  padding-bottom: 7rpx;
  margin: 0rpx 0rpx;
  font-size: 12px;
  border-radius: 2px;
  background: rgb(160, 13, 38);
}

.videoTitle {
  float: left;
  margin-left: 20rpx;
  color: rgb(75, 75, 75);
}

.InterTitle {
  /* background: olive; *//* padding: 10rpx; */
