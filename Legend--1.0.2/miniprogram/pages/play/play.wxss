  padding: 50rpx;
  font-size: 35rpx;
  color: rgb(75, 75, 75);
}

.scrollContent{
  margin-bottom: 100rpx;
}

.videoFooter {
  border-top:  1rpx solid rgba(0, 0, 0, 0.116);
  background: rgb(228, 228, 228);
  text-align: center;
  font-size: 31rpx;
  font-weight: bold;
  padding: 30rpx 0rpx;
  margin-top: 20rpx;
  color: rgb(109, 109, 109);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
